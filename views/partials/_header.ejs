<% if (!username) { %>

<form method="POST" action=<%=`/login`%>>
    <p> username: <input type="text" name="username"> </p>
    <input type="submit">
    </form>

  <% } else { %>

  <p> <%=username%> </p>
  <form method="POST" action=<%=`/logout`%>>
    <button> logout </button>
